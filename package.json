{
  "name": "microselfcare",
  "version": "1.0.0",
  "description": "the app that cares about you",
  "repository": "https://github.com/ricardoinaciopt/microselfcare",
  "main": "main.js",
  "config": {
    "forge": "forge.config.js"
  },
  "scripts": {
    "start": "electron-forge start ",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build_osx": "electron-packager . microselfcare --platform=darwin --arch=arm64  --prune=true --out=out --overwrite --icon=icon.icns",
    "build_linux": "electron-packager . microselfcare --platform=linux  --arch=x64 --out ~/Documents/ --overwrite --icon=icon.ico"
  },
  "keywords": [
    "self-care",
    "care",
    "help",
    "health",
    "minimal",
    "micro"
  ],
  "author": "Ricardo In√°cio",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.60",
    "@electron-forge/maker-deb": "^6.0.0-beta.60",
    "@electron-forge/maker-rpm": "^6.0.0-beta.60",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.60",
    "@electron-forge/maker-zip": "^6.0.0-beta.60",
    "@types/aos": "^3.0.4",
    "aos": "^2.3.4",
    "electron": "^14.0.0",
    "electron-packager": "^15.5.2"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.0"
  }
}
